<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/body_background"
    tools:context=".UI.Screens.Authentication.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="?attr/lingifyBackIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/themeChangerButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/button_background_theme_changer"
                    android:src="?attr/lingifyThemeChangerImage"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="240dp"
                android:layout_height="80dp"
                android:src="?attr/lingifyLogo"
                android:layout_gravity="center"
                android:padding="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_title"
                    android:fontFamily="@font/sf_pro_medium"
                    android:textColor="@color/body_primary"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:scrollHorizontally="false"
                    android:breakStrategy="simple"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_username_title"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textColor="@color/body_primary"
                            android:textSize="14sp"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/usernameInputField"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/background_input_email"
                            android:ems="10"
                            android:fontFamily="@font/sf_pro_medium"
                            android:hint="@string/register_username_placeholder"
                            android:inputType="textEmailAddress"
                            android:padding="8dp"
                            android:textColorHint="@color/body_secondary" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_namesurname_title"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textColor="@color/body_primary"
                            android:textSize="14sp"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nameSurnameInputField"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/background_input_email"
                            android:ems="10"
                            android:fontFamily="@font/sf_pro_medium"
                            android:hint="@string/register_namesurname_placeholder"
                            android:inputType="textEmailAddress"
                            android:padding="8dp"
                            android:textColorHint="@color/body_secondary" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_email_title"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textColor="@color/body_primary"
                            android:textSize="14sp"/>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailInputField"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/background_input_email"
                            android:ems="10"
                            android:fontFamily="@font/sf_pro_medium"
                            android:hint="@string/register_email_placeholder"
                            android:inputType="textEmailAddress"
                            android:padding="8dp"
                            android:textColorHint="@color/body_secondary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/register_phonenumber_title"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textColor="@color/body_primary"
                            android:textSize="14sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/countryCodePicker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:ccp_defaultNameCode="TR"
                                app:ccp_showNameCode="false"
                                app:ccp_showFlag="false"
                                android:layout_gravity="center"/>

                            <View
                                android:id="@+id/divider"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/field_divider"/>

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phoneNumberInputField"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="50dp"
                                android:background="@drawable/background_input_email"
                                android:ems="10"
                                android:fontFamily="@font/sf_pro_medium"
                                android:hint="@string/register_phonenumber_placeholder"
                                android:inputType="textEmailAddress"
                                android:padding="8dp"
                                android:textColorHint="@color/body_secondary" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_button"
                    android:fontFamily="@font/sf_pro_medium"
                    android:textColor="@color/body_on_primary"
                    android:background="@drawable/button_background_get_ready"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:layout_margin="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <View
                        android:id="@+id/firstLine"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp"
                        android:background="@drawable/shape_stick"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:id="@+id/orText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/or_button"
                        android:fontFamily="@font/sf_pro_regular"
                        android:textColor="@color/body_secondary"
                        android:textSize="18sp"
                        android:layout_gravity="end|center"
                        android:gravity="end|center"
                        android:lineSpacingExtra="4sp"
                        android:maxLines="2"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:breakStrategy="simple"/>
                    <View
                        android:id="@+id/secondLine"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"
                        android:background="@drawable/shape_stick"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/registerViaGoogleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button_background_login_via">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="?attr/lingifyGoogleIcon"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_via_google_button"
                        android:fontFamily="@font/sf_pro_medium"
                        android:textColor="@color/body_primary"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/registerViaAppleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button_background_login_via">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="?attr/lingifyAppleIcon"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_via_apple_button"
                        android:fontFamily="@font/sf_pro_medium"
                        android:textColor="@color/body_primary"
                        android:textSize="16sp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_and_conditions"
                    android:fontFamily="@font/sf_pro_medium"
                    android:textColor="@color/body_secondary"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:scrollHorizontally="false"
                    android:breakStrategy="simple"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_login_start"
                        android:fontFamily="@font/sf_pro_regular"
                        android:textColor="@color/body_primary"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/loginText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_login_end"
                        android:fontFamily="@font/sf_pro_regular"
                        android:textColor="@color/primary_color"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>