<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (before progress) -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/body_primary" />
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/loading_skeleton_start"
                    android:endColor="@color/loading_skeleton_end"
                    android:angle="0"/>
                <corners android:radius="5dp"/>
            </shape>
        </clip>
    </item>
</layer-list>